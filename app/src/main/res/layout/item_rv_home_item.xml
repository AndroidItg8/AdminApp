<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorBlueDark"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="08dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="08dp">

        <TextView
            android:id="@+id/lbl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="08dp"
            android:fontFamily="@font/roboto_light"
            android:text="Teacher"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/small_text_size" />


        <TextView
            android:id="@+id/lbl_count_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="08dp"
            android:layout_below="@+id/lbl_title"
            android:fontFamily="@font/roboto"
            android:text="308"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/medium_2_text_size" />








    </RelativeLayout>


</android.support.v7.widget.CardView>